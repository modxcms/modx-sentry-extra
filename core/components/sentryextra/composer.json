{
    "name": "modxcms/modx-sentry-extra",
    "description": "Extra for reporting MODX events to Sentry",
    "require": {
        "php": ">=7.4",
        "sentry/sentry": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "SentryExtra\\": "src/"
        }
    },
    "authors": [
        {
            "name": "matdave",
            "email": "mat@matdave.com"
        }
    ],
    "config": {
        "platform": {
            "php": "7.4"
        },
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "require-dev": {
        "modx/revolution": "^3.0"
    }
}
